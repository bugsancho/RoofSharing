<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title -RoofSharing</title>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/css-theme")
        @Styles.Render()
        @RenderSection("styles", required: false)
        @Scripts.Render("~/bundles/modernizr")

        <!--This bundle was moved by the Telerik VS Extensions for compatibility reasons-->
        @Scripts.Render("~/bundles/jquery")
        <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.common.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.mobile.all.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.dataviz.bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/kendo/2014.2.1008/jquery.min.js")"></script>
        <script src="@Url.Content("~/Scripts/kendo/2014.2.1008/kendo.all.min.js")"></script>
        <script src="@Url.Content("~/Scripts/kendo/2014.2.1008/kendo.aspnetmvc.min.js")"></script>
        <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
        <meta name="description" content="Roof sharing" />
    </head>
    <body class="nize">
        <div class="navbar navbar-inverse ">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Roof Sharing", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Plan Your Trip", "Plan", "Trips", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Profile", "Index", "Profile", new { area = "Profile" }, null)</li>
                        @if (User.IsInRole(RoofSharing.Common.GlobalConstants.AdminRoleName))
                        {
                                                    <li>@Html.ActionLink("Admin", "Index", "AdminHome", new { area = "Administration" }, null)</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content ">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - RoofSharing</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/bootstrap-theme")
        @RenderSection("scripts", required: false)
    </body>
</html>
