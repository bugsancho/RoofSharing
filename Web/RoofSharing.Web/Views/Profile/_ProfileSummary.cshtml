@using RoofSharing.Web.Infrastructure.Extensions
@using Microsoft.AspNet.Identity

@model RoofSharing.Web.ViewModels.Profile.ProfileSummaryViewModel
<div class="panel-heading resume-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-xs-12 col-sm-4">
                <figure>
                    @Html.FacebookImage(Model.PictureUrl, "Profile Picture", new { @class = "img-circle img-responsive" }, 300, 300)
                </figure>
            
            </div>
            
            <div class="col-xs-12 col-sm-8">
                <ul class="list-group">
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(x => x.FirstName): </strong>@Html.DisplayFor(x => x.FirstName)
                    </li>
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(x => x.LastName): </strong>@Html.DisplayFor(x => x.LastName)
                    </li>
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(x => x.City): </strong>@Html.DisplayFor(x => x.City)
                    </li>
                    <li class="list-group-item">
                        <i class="fa fa-phone"></i> @Html.DisplayFor(x => x.PhoneNumber)
                    </li>
                    <li class="list-group-item">
                        <i class="fa fa-envelope"></i> @Html.DisplayFor(x => x.Email)
                    </li>

                    
                    @{
                        if (Model.Id != User.Identity.GetUserId())
                        {
                        @:<li class="list-group-item">
                            Html.RenderAction("FriendPartial", "Friends", new
                            {
                                area = string.Empty,
                                userId = Model.Id
                            });
                            
                            
                            
                        @:</li>
                        }
                    }
                    <li class="list-group-item">
                        @Html.ActionLink("Profile", "Index", "Profile", new { area = "Profile", userId = Model.Id }, new { @class = "btn btn-default" })
                    </li>
                   
                    
                </ul>
            </div>
        </div>
    </div>
</div>
